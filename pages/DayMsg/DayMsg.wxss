/* 使用page就是为了保证  满屏 */

page {
    width: 100%;
    height: 100%;
  }
  .container {
    display: flex;
    flex-direction: column;
}

.header_bg {
    z-index: -1;
    width: 100%;
}

.header {
    position: absolute;
}


  .view_contain {
    width: 100%;
    height: 100%;
    background: white
  }
  
  
  
  
  


  
  .list-item {
    display: flex;
    flex-direction: column;
    align-items: normal;
    width: 100%;
    height: 100rpx;
    /* margin-top: 20rpx; */
    position: relative; /*父元素位置要设置为相对*/
    
  }
  
 
  
  .item-text {
    color: rgb(13, 223, 188);
    /* color: rgb(51,51,51); */
    font-size: 30rpx;
    margin-left: 20rpx;
  }
  
  .image-jiantou {
    width: 20rpx;
    height: 35rpx;
    position: absolute; /* 要约束所在位置的子元素的位置要设置成绝对 */
    right: 0; /* 靠右调节 */
    margin-right: 35rpx;
  }
  
  /*去掉最后面的下画线*/
  .box{
    border: none;
  }
  
  